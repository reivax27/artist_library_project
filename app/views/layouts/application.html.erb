<!DOCTYPE html>
<html>
  <head>
    <title>ArtistLibraryProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
  <header>
    <h1>Welcome to Artists Library</h1>
    <nav class="navbar navbar-dark bg-dark text-info" style="background-color: #000000;">
      <ul class="nav">
        <li class="nav-item"><%= link_to "Home", root_path %> | </li>
        <li><%= link_to "Albums", albums_path %> | </li>
        <li><%= link_to "Songs", songs_path %> | </li>
        <li><%= link_to "About Us", static_path(permalink: 'about-us') %></li>
      </ul>
      <%= form_tag(search_results_path, method: "get") do %>
        <%= label_tag(:q, "Search for:") %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search") %>
      <% end %>
    </nav>
  </header>
    <%= yield %>
    <footer>#FreeSavageThe21st</footer>
    </div>
  </body>
</html>
